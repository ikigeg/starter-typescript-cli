{
  "name": "starter-typescript-cli",
  "version": "0.0.2",
  "description": "Simple starter typescript CLI project",
  "main": "dist/ts-cli.js",
  "bin": {
    "wfec": "bin/ts-cli"
  },
  "scripts": {
    "test": "jest",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc --pretty --project tsconfig.json",
    "watch": "npm run build -- --watch",
    "start": "npm run build && node bin/ts-cli",
    "dev": "ts-node src/bin/ts-cli",
    "dev:watch": "nodemon -w src -x \"npm run ts-node\"",
    "tsc": "tsc"
  },
  "keywords": [],
  "author": {
    "name": "Michael Griffiths",
    "email": "michael@ildesigns.co.uk"
  },
  "license": "ISC",
  "dependencies": {
    "cac": "^6.4.2",
    "chalk": "^2.4.2",
    "dotenv": "^6.2.0",
    "figures": "^2.0.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^24.0.5",
    "@types/node": "^11.9.4",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3"
  }
}
